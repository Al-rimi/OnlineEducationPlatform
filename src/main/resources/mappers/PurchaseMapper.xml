<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineeducationplatform.mapper.PurchaseMapper">
    <resultMap id="PurchaseResult" type="com.example.onlineeducationplatform.model.Purchase">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="courseId" column="course_id" />
        <result property="amount" column="amount" />
        <result property="currency" column="currency" />
        <result property="status" column="status" />
        <result property="purchasedAt" column="purchased_at" />
    </resultMap>

    <insert id="insert" parameterType="com.example.onlineeducationplatform.model.Purchase"
        useGeneratedKeys="true" keyProperty="id"> INSERT INTO purchases(user_id, course_id, amount,
        currency, status) VALUES(#{userId}, #{courseId}, #{amount}, #{currency}, #{status}) </insert>

    <select id="select" resultMap="PurchaseResult"> SELECT * FROM purchases WHERE user_id=#{userId}
        AND course_id=#{courseId} </select>

    <select id="selectByUser" resultMap="PurchaseResult"> SELECT * FROM purchases WHERE
        user_id=#{userId} ORDER BY purchased_at DESC </select>
</mapper>