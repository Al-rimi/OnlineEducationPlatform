<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineeducationplatform.mapper.VideoMapper">
    <resultMap id="VideoResult" type="com.example.onlineeducationplatform.model.Video">
        <id property="id" column="id" />
        <result property="courseId" column="course_id" />
        <result property="title" column="title" />
        <result property="videoUrl" column="video_url" />
        <result property="durationSeconds" column="duration_seconds" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <select id="selectById" resultMap="VideoResult">SELECT * FROM videos WHERE id=#{id}</select>
    <select id="selectByCourse" parameterType="int" resultMap="VideoResult">SELECT * FROM videos
        WHERE course_id=#{courseId} ORDER BY id</select>
    <insert id="insert" parameterType="com.example.onlineeducationplatform.model.Video"
        useGeneratedKeys="true" keyProperty="id"> INSERT INTO videos(course_id, title, video_url,
        duration_seconds) VALUES(#{courseId}, #{title}, #{videoUrl}, #{durationSeconds}) </insert>
    <update id="update" parameterType="com.example.onlineeducationplatform.model.Video"> UPDATE
        videos SET title=#{title}, video_url=#{videoUrl}, duration_seconds=#{durationSeconds} WHERE
        id=#{id} </update>
    <delete id="delete" parameterType="int">DELETE FROM videos WHERE id=#{id}</delete>
</mapper>