<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineeducationplatform.mapper.CourseMapper">
    <resultMap id="CourseResult" type="com.example.onlineeducationplatform.model.Course">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="description" column="description" />
        <result property="categoryId" column="category_id" />
        <result property="createdBy" column="created_by" />
        <result property="status" column="status" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="selectById" resultMap="CourseResult">SELECT * FROM courses WHERE id=#{id}</select>
    <select id="selectAll" resultMap="CourseResult">SELECT * FROM courses ORDER BY created_at DESC</select>
    <select id="selectByCategory" parameterType="int" resultMap="CourseResult">SELECT * FROM courses
        WHERE category_id=#{categoryId}</select>
    <select id="searchByTitle" parameterType="string" resultMap="CourseResult">SELECT * FROM courses
        WHERE title LIKE CONCAT('%', #{keyword}, '%')</select>
    <insert id="insert" parameterType="com.example.onlineeducationplatform.model.Course"
        useGeneratedKeys="true" keyProperty="id"> INSERT INTO courses(title, description,
        category_id, created_by, status) VALUES(#{title}, #{description}, #{categoryId},
        #{createdBy}, #{status}) </insert>
    <update id="update" parameterType="com.example.onlineeducationplatform.model.Course"> UPDATE
        courses SET title=#{title}, description=#{description}, category_id=#{categoryId},
        status=#{status} WHERE id=#{id} </update>
    <delete id="delete" parameterType="int">DELETE FROM courses WHERE id=#{id}</delete>
</mapper>